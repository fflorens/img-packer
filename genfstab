#!/bin/bash

root_mountpoint=$1

root_fs_uuid=$(blkid /dev/vda1 | tr " " "\n" | grep -E "^PARTUUID=" | cut -d'=' -f2 | tr -d '"')
efi_fs_uuid=$(blkid /dev/vda15 | tr " " "\n" | grep -E "^PARTUUID=" | cut -d'=' -f2 | tr -d '"')

echo """# Generated by Scaleway's build system
PARTUUID=$root_fs_uuid / ext4 rw,relatime 0 1
PARTUUID=$efi_fs_uuid /boot/efi vfat rw,relatime,errors=remount-ro,nofail 0 2
""" > $root_mountpoint/etc/fstab
